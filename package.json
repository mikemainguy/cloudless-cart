{
  "name": "cloudless-cart",
  "version": "0.3.2",
  "description": "simple module to create distributed secure shopping carts",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "browser": "./dist/browser/cloudless-cart.js",
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "build": "npm run build:node && npm run build:browser",
    "build:node": "tsc --project tsconfig.build.json",
    "build:browser": "rollup -c && cp node_modules/brotli-wasm/pkg.web/brotli_wasm_bg.wasm dist/browser/ 2>/dev/null || true",
    "prepublish": "npm run build",
    "clean": "rm -rf ./dist/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "test:browser": "jest --testPathPattern=browser --verbose --no-coverage --silent=false",
    "serve": "python3 -m http.server 8000",
    "test:performance": "jest --testPathPattern=performance-simple --verbose --no-coverage --silent=false",
    "test:performance:report": "jest --testPathPattern=performance-markdown --verbose --no-coverage --silent=false",
    "typecheck": "tsc --noEmit",
    "install:no-wasm": "npm install --no-optional",
    "install:browser-only": "npm install --no-optional"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikemainguy/cloudless-cart.git"
  },
  "license": "MIT",
  "author": {
    "name": "Michael Mainguy",
    "email": "mike.mainguy@gmail.com",
    "url": "https://github.com/mikemainguy"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "typescript",
    "shopping",
    "cart",
    "jwt",
    "jose",
    "crypto",
    "composable",
    "distributed",
    "secure",
    "ecommerce",
    "brotli",
    "compression",
    "gzip"
  ],
  "bugs": {
    "url": "https://github.com/mikemainguy/cloudless-cart/issues"
  },
  "homepage": "https://github.com/mikemainguy/cloudless-cart#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/brotli": "^1.3.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.8.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "buffer": "^6.0.3",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.2.1",
    "puppeteer": "^22.0.0",
    "rollup": "^2.79.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.2.4",
    "util": "^0.12.5"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "dependencies": {
    "brotli": "^1.3.3",
    "fast-json-stable-stringify": "^2.1.0",
    "jose": "^5.9.6",
    "uuid": "^10.0.0"
  },
  "peerDependencies": {
    "brotli-wasm": "^1.1.0"
  },
  "peerDependenciesMeta": {
    "brotli-wasm": {
      "optional": true
    }
  }
}
